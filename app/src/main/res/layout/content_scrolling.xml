<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.didi.little.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling"
    android:background="@color/material_grey_100">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorPrimary"
        android:text="123456789"
        android:textSize="15sp"
        android:paddingLeft="35dp"
        android:textColor="#ffffff"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="15dp"
    android:background="#ffffff">

    <Button
        android:onClick="CallNumber"
        android:layout_width="0dp"
        android:paddingTop="8dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#00000000"
        android:textSize="12sp"
        android:drawableTop="@mipmap/free_call"
        android:text="打电话" />
    <View
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        android:layout_width="1px"
        android:layout_height="30dp"
        android:background="@color/material_grey_600"></View>

    <Button
        android:id="@+id/imageButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#00000000"
        android:onClick="SendNumber"
        android:textSize="12sp"
        android:drawableTop="@mipmap/main_tab_dial_pressed"
        android:text="发短信" />

</LinearLayout>
<LinearLayout
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_marginBottom="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="事件提醒"
        android:layout_margin="17dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/tv_timesele"
        android:onClick="TimeSelectAle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="13sp"
        android:text="时间选择"/>
    <EditText
        android:id="@+id/editText_title"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="13sp"
        android:gravity="center"
        android:hint="内容标题" />
    <EditText
        android:id="@+id/editText_message"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="13sp"
        android:gravity="center"
        android:hint="信息详情" />
    <EditText
        android:id="@+id/editText_action"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="13sp"
        android:focusable="false"
        android:cursorVisible="false"
        android:gravity="center"
        android:hint="可选动作" />

    <Button
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_width="170dp"
        android:textSize="14sp"
        android:id="@+id/btn_ale_start"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="保存"/>
</LinearLayout>
</LinearLayout>


</android.support.v4.widget.NestedScrollView>
